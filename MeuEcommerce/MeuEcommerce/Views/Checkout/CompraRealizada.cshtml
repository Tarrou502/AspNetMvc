@model MeuEcommerce.Models.Compra

@{
    ViewBag.Title = "CompraRealizada";
}

<h2>Parabens @Model.Usuario.UserName sua compra foi realializada com sucesso</h2>
<br/>
O código de sua compra e : @Model.Id

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Produto</td>
            <td>Quantidade</td>
            <td>Preço</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td>
                    @item.Produto.Nome
                </td>
                <td>
                    @item.Quantidade
                </td>
                <td>
                    @item.PrecoTotal
                </td>
            </tr>
        }
    </tbody>
    Valor total: @Model.PrecoTotal
    Status: @Model.Status.ToString()
</table>